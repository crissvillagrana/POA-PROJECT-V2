<%- include ../layouts/cabeceradmins.ejs %>
<div class="card">
    <div class="card text-black bg-transparent mb-3">
        <div class="card-body">
            <h6 class="card-title">Índice</h6>
            <div class="list-group">
                <a href="#tabla1" class="list-group-item list-group-item-action">Actividades aprobadas por trimestre</a>
                <a href="#tabla3" class="list-group-item list-group-item-action">Avance por área (Trimestre ENERO - MARZO)</a>
                <a href="#tabla4" class="list-group-item list-group-item-action">Avance por área (Trimestre ABRIL - JUNIO)</a>
                <a href="#tabla5" class="list-group-item list-group-item-action">Avance por área (Trimestre JULIO - SEPTIEMBRE)</a>
                <a href="#tabla6" class="list-group-item list-group-item-action">Avance por área (Trimestre OCTUBRE-DICIEMBRE)</a>
                <a href="#tabla7" class="list-group-item list-group-item-action">Avance total</a>
                <a href="#tabla2" class="list-group-item list-group-item-action">Avance total por área (anual)</a>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card text-black bg-transparent mb-3">
        <div class="card-body">
            <h6 class="card-title" id="tabla1">Actividades aprobadas por trimestre</h6>
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="thead-light">
                        <tr>
                            <th>ENERO - MARZO</th>
                            <th>ABRIL - JUNIO</th>
                            <th>JULIO - SEPTIEMBRE</th>
                            <th>OCTUBRE - DICIEMBRE</th>
                            <th>Actividades Registradas</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><%= progresoa[0].completadas_t1 %></td>
                            <td><%= progresoa[0].completadas_t2 %></td>
                            <td><%= progresoa[0].completadas_t3 %></td>
                            <td><%= progresoa[0].completadas_t4 %></td>
                            <td><%= progresoa[0].total_actividades %></td>
                        </tr>
                        
                    </tbody>
                </table>
            </div>
        </div>

        

    <div class="card-body">
        <h6 class="card-title" id="tabla3">Avance por área (Trimestre ENERO - MARZO)</h6>
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="thead-light">
                    <tr>
                        <th>Area</th>
                        <th>Aprobadas</th>
                        <th>Registradas</th>
                        <th>Avance</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let x = 0;x < tri1.length; x++) { %>
                        <tr>
                            <td><%=tri1[x].area_nombre%></td>
                            <td><%=tri1[x].actividades_aprobadas %></td>
                            <td><%=tri1[x].actividades_registradas %></td>
                            <td><%= Math.round((tri1[x].actividades_aprobadas * 100)/tri1[x].actividades_registradas)%> %</td>
                            
                        </tr>
                    <% } %>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

