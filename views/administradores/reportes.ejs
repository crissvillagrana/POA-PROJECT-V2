        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="thead-light">
                    <tr>
                        <th>Actividades Completadas</th>
                        <th>Actividades Programadas</th>
                        <th>Porcentaje de avance</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= progreso[0].total_completadas %></td>
                        <td><%= progreso[0].total_actividades %></td>
                        <td><%= Math.round((progreso[0].total_completadas * 100)/progreso[0].total_actividades) %>%</td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-body">
        <h6 class="card-title" id="tabla2">Avance total por área (anual)</h6>
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="thead-light">
                    <tr>
                        <th>Area</th>
                        <th>Completadas</th>
                        <th>Pendientes</th>
                        <th>Total</th>
                        <th>Avance</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let x = 0;x < avance.length; x++) { %>
                        <tr>
                            <td><%=avance[x].area_nombre%></td>
                            <td><%=avance[x].actividades_completadas %></td>
                            <td><%=avance[x].actividades_registradas - avance[x].actividades_completadas %></td>
                            <td><%=avance[x].actividades_registradas %></td>
                            <td>
                                <%= Math.round((avance[x].actividades_completadas * 100)/avance[x].actividades_registradas) %>%
