<!--MODAL CREACION-->
<div class="modal fade" id="ventanaCreacion" tabindex="-1" role="dialog" aria-laberlledby="tituloVentana" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="tituloVentana">Agregar nueva Área</h5>
                <button class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <p class="card-text">
                        <form method="post" action="/areas" enctype="multipart/form-data">
                            
                            <div class="form-group">
                                <label for="my-input">Nombre</label>
                                <input id="my-input" class="form-control" type="text" name="nombre"/>
                            </div>
            
                            
                            <button class="btn btn-outline-info" type="submit"><img src="/images/guardar.png" width="20"></button>
                        </form>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div> 











