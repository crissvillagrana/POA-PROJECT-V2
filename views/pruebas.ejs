    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  </head>
<body>
    <div class="dropdown" id="droptrimestre">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Trimestre
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="#" data-value="option1">Enero-Marzo</a></li>
          <li><a class="dropdown-item" href="#" data-value="option2">Abril-Junio</a></li>
          <li><a class="dropdown-item" href="#" data-value="option3">Julio-Septiembre</a></li>
          <li><a class="dropdown-item" href="#" data-value="option4">Octubre-Diciembre</a></li>
        </ul>
      </div>
    </div>
      
    <table class="table">
        <thead>
          <tr>
            <th>Columna 1</th>
            <th>Columna 2</th>
            <th>Columna 3</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td id="valor">Este es el valor inicial</td>
            <td>Columna 2</td>
            <td>Columna 3</td>
          </tr>
        </tbody>
      </table>
      
      <script>
        $(document).ready(function() {
          // Obtener el elemento del menú desplegable
          var dropdown = $('.dropdown-menu');
      
          // Agregar un controlador de eventos para cuando se selecciona una opción
          dropdown.on('click', 'a', function(event) {
            // Evitar que la página se recargue
            event.preventDefault();
      
            // Obtener el valor de la opción seleccionada
            var value = $(this).text();
      
            // Actualizar el contenido de la celda de la tabla
            $('#valor').text('Seleccionaste la opción ' + value);
          });
        });
      </script>
      
      
</body>
</html>